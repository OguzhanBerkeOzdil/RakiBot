# RakÄ±Bot AI Assistant - Environment Configuration
# Copy this file to .env and fill in your actual values

# Google API Configuration - Multi-API Key Support
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_API_KEY_BACKUP=your_backup_google_api_key_here
GOOGLE_AI_API_KEY_BACKUP=your_backup_google_ai_api_key_here
GOOGLE_SHEET_URL=your_google_sheet_url_here
GOOGLE_CREDENTIALS_FILE=credentials.json

# Google Search API Configuration - Multi-API Key Support
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_API_KEY_BACKUP=your_backup_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_custom_search_engine_id_here
GOOGLE_SEARCH_ENABLED=true

# Model Configuration
EMBEDDING_MODEL=models/text-embedding-004
GENERATION_MODEL=gemini-2.0-flash
MAX_TOKENS=7000
TEMPERATURE=0.1

# RAG Configuration - SMART-RAG MULTI-LAYER THRESHOLDS (AGGRESSIVE WEB SEARCH)
EMBEDDING_THRESHOLD=0.45
RAG_SIM_THRESHOLD=0.45
WEB_SEARCH_THRESHOLD=0.95
TOP_K_RETRIEVAL=8
CONFIDENCE_THRESHOLD=0.30

# Security Configuration
SECRET_KEY=your_super_secret_key_here_change_this
LOG_LEVEL=INFO

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Optional: Ollama Configuration (if using local models)
OLLAMA_BASE_URL=http://localhost:11434
LOCAL_EMBEDDING_MODEL=nomic-embed-text
LOCAL_GENERATION_MODEL=gemma3:latest
